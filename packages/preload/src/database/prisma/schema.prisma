// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db/2-corintios-9.db"
}

model Member {
  id          String  @id
  name        String
  congregated Boolean @default(false)
  Tithe       Tithe[]
  Offer       Offer[]
}

model Tithe {
  id             String @id
  memberId       String
  value          Float
  referenceMonth Int
  referenceYear  Int
  member         Member @relation(fields: [memberId], references: [id])
}

model Offer {
  id             String  @id
  memberId       String? @default("")
  value          Float
  referenceMonth Int
  referenceYear  Int
  member         Member? @relation(fields: [memberId], references: [id])
}

model ExpenseCategory {
  id      String    @id
  name    String    @unique
  Expense Expense[]
}

model Expense {
  id                String          @id
  expenseCategoryId String
  title             String
  value             Float
  referenceMonth    Int
  referenceYear     Int
  expenseCategory   ExpenseCategory @relation(fields: [expenseCategoryId], references: [id])
}

model Balance {
  id             String @id
  value          Float
  referenceMonth Int
  referenceYear  Int
}
